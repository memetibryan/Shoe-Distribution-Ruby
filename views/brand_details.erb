<h1><%= @brand.name() %></h1>

<hr>

<% if @brand.stores().any?() %>

    <h3>Here are all the Stores selling <%= @brand.name() %>:</h3>

    <ul>
      <% @brand.stores().each() do |brand| %>
        <li><%= brand.name() %><p>Stocked On:</p><%= brand.created_at() %></li>
      <% end %>
    </ul>
  <% else %>

    <p>There are no Stores selling <%= @brand.name() %> yet!
  <% end %>

<hr>

  <div class="container">
    <a href="/brands"><button class="button btn">All Brands</button></a>
    <a href="/start"><button class="button btn">Categories</button></a>
  </div>