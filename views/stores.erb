<h1>All Stores</h1>

<% if @stores.any?() %>
    <p>Click on a store to see information about it and add actors to it:</p>

    <ul>
      <% @stores.each do |store| %>
      <li><a href="/stores/<%= store.id() %>"><%= store.name() %></a><p>Became a member On:</p><%= store.created_at() %></li>
      <p><a href="/stores/<%= store.id() %>/edit"><button class="button btn"> Edit <%= store.name() %> store</button></a></p>
      <% end %>
    </ul>
  <% else %>
    <p>There are no stores added yet!</p>
  <% end %>

  <div class="container">
    <a href="/stores/new"><button class="button btn">New Store</button></a>
    <a href="/start"><button class="button btn">Categories</button></a>
  </div>